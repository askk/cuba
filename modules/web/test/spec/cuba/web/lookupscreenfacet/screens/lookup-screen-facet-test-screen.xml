<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd">
    <data>
        <collection id="userDc"
                    class="com.haulmont.cuba.security.entity.User"
                    view="user.browse">
            <loader>
                <query>
                    <![CDATA[
                        select u from sec$User u
                    ]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="action"/>
    </actions>
    <facets>
        <lookupScreen id="lookupScreen"
                      entityClass="com.haulmont.cuba.security.entity.User"
                      openMode="DIALOG"
                      onAction="action"
                      field="pickerField"
                      container="userDc"
                      listComponent="usersTable"/>

        <lookupScreen id="tableLookupScreen"
                      listComponent="usersTable"
                      onButton="button"/>

        <lookupScreen id="fieldLookupScreen"
                      field="pickerField"/>
    </facets>
    <layout>
        <pickerField id="pickerField"
                     metaClass="sec$User"/>
        <button id="button"/>
        <table id="usersTable"
               dataContainer="userDc">
            <columns>
                <column id="name"/>
            </columns>
            <rows/>
        </table>
    </layout>
</window>